generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocumentStatus {
  PENDING
  SUCCESS
  ERROR
}

model File {
  id        String           @id @default(uuid())
  userEmail String
  fileName  String
  s3Key     String           @unique
  status    DocumentStatus   @default(PENDING)
  createdAt DateTime         @default(now())
}